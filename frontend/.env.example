# Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v3
VITE_WS_URL=ws://localhost:8000

# Application Configuration
VITE_APP_NAME=Anthias Digital Signage
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_ANALYTICS=true

# Development Configuration
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# Error Reporting (Production)
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_ENABLE_ERROR_REPORTING=true

# Performance Configuration
VITE_API_TIMEOUT=10000
VITE_RETRY_ATTEMPTS=3
VITE_CACHE_DURATION=300000

# Upload Configuration
VITE_MAX_FILE_SIZE=100MB
VITE_ALLOWED_FILE_TYPES=image/*,video/*,application/pdf

# WebSocket Configuration
VITE_WS_RECONNECTION_ATTEMPTS=5
VITE_WS_RECONNECTION_DELAY=1000

# Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=anthias_
VITE_SESSION_STORAGE_PREFIX=anthias_session_
